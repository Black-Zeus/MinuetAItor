# =========================
# BASE (común a todos)
# =========================
PROJECT_NAME=MinuetAItor
ENV_NAME=dev

# Dominio/Host
APP_HOST=localhost

# Reverse proxy
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Frontend
FRONTEND_PORT=5173

# Backend
BACKEND_PORT=8000

# MariaDB
MARIADB_HOST=mariadb
MARIADB_PORT=3306
MARIADB_DATABASE=minuetaitor
MARIADB_USER=minuetaitor
MARIADB_PASSWORD=change_me
MARIADB_ROOT_PASSWORD=root_change_me

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# MinIO
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin_change_me

# Tools (solo DEV/QA con profiles)
ADMINER_PORT=8080
PHPMYADMIN_PORT=8082
REDISINSIGHT_PORT=5540
MAILPIT_UI_PORT=8025
MAILPIT_SMTP_PORT=1025

# Seguridad (backend)
JWT_SECRET=change_me_super_secret
## ================ Corte ======================
ENV_NAME=dev

# DEV: exponer puertos de servicios para test
EXPOSE_DB_PORT=1
EXPOSE_REDIS_PORT=1
EXPOSE_MINIO_PORTS=1

# DEV: CORS/URL API
BACKEND_PUBLIC_URL=http://localhost:8000
FRONTEND_PUBLIC_URL=http://localhost:5173
## ================ Corte ======================
ENV_NAME=qa

# QA: puedes exponer puertos si necesitas pruebas integradas
EXPOSE_DB_PORT=1
EXPOSE_REDIS_PORT=1
EXPOSE_MINIO_PORTS=1

BACKEND_PUBLIC_URL=http://localhost:8000
FRONTEND_PUBLIC_URL=http://localhost:5173
## ================ Corte ======================
ENV_NAME=prd

# PRD: no exponer puertos internos (solo 80/443 en nginx)
EXPOSE_DB_PORT=0
EXPOSE_REDIS_PORT=0
EXPOSE_MINIO_PORTS=0

# URLs públicas (ajusta a dominio real)
BACKEND_PUBLIC_URL=https://app.tu-dominio.tld/api
FRONTEND_PUBLIC_URL=https://app.tu-dominio.tld
