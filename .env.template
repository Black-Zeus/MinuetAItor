####################################################################################################
# .env.example — MinuetAItor
# --------------------------------------------------------------------------------------------------
# Reglas:
#  - BASE: variables comunes y/o defaults.
#  - DEV/QA/PRD: overrides por ambiente (mismo nombre de variable, distinto valor).
#  - NO commits de secretos reales. Usar placeholders.
####################################################################################################

####################################################################################################
# [BASE] Común a todos los ambientes
####################################################################################################

# Identidad del stack
PROJECT_NAME=MinuetAItor
ENV_NAME=base

# Dominio/Host (referencial)
APP_HOST=localhost

# Reverse proxy / Puertos
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Frontend / Backend
FRONTEND_PORT=5173
BACKEND_PORT=8000

# MariaDB
MARIADB_HOST=mariadb
MARIADB_PORT=3306
MARIADB_DATABASE=minuetaitor
MARIADB_USER=minuetaitor
MARIADB_PASSWORD=__CHANGE_ME__
MARIADB_ROOT_PASSWORD=__CHANGE_ME__

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# MinIO
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=__CHANGE_ME__

# Tools (habilitables con profiles/flags en DEV/QA)
ADMINER_PORT=8080
PHPMYADMIN_PORT=8082
REDISINSIGHT_PORT=5540
MAILPIT_UI_PORT=8025
MAILPIT_SMTP_PORT=1025

# Seguridad (backend)
JWT_SECRET=__CHANGE_ME_SUPER_SECRET__
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=480

# Spinners (frontend)
PAGE_SPINNER_VARIANT=default         # default|success|warning|error|info|minimal|dots|skeleton
PAGE_SPINNER_SIZE=large              # small|medium|large
PAGE_SPINNER_TYPE=default            # default|download|upload|refresh|processing|database|check|alert|clock|zap
PAGE_SPINNER_SHOW_PROGRESS=false
PAGE_SPINNER_INDETERMINATE=true

# Logging (frontend)
LOG_ENABLED=true
LOG_LEVELS=warn,error
LOG_SCOPES=core,auth,error-boundary
LOG_DEFAULT_SCOPE=core
LOG_PREFIX=[MinuetAItor]

# Geo-block (backend)
GEO_BLOCK_ENABLED=false

# Frontend - Info app (Vite)
VITE_FRONTEND_NAME=MinuetAItor
VITE_FRONTEND_VERSION=1.0.0
VITE_FRONTEND_ENV=development

# Frontend - API URL (Vite)
VITE_FRONTEND_API_URL=http://localhost:8000

# SMTP / Mailpit (backend)
SMTP_HOST=mailpit
SMTP_PORT=1025
SMTP_USER=no-reply@minuetaitor.cl
SMTP_PASSWORD=
SMTP_FROM_NAME=MinuetAItor DEV
SMTP_FROM_EMAIL=no-reply@minuetaitor.cl
SMTP_USE_TLS=false
SMTP_USE_SSL=false
SMTP_TIMEOUT=10


